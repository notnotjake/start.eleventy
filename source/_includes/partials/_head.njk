<!-- Site Info -->
<meta charset="utf-8">
<title>{{ site.name }}{% if title %} - {{ title }}{% endif %}</title>
{% if site.author %}<meta name="author" content="{{ site.author }}">{% endif %}
<meta name="description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
{% if cannonical %}<link rel="canonical" href="{{ cannonical }}">{% endif %}
<!-- Site Info [End] -->

<!-- Fathom Analytics -->
{% if site.fathom.use %}<script src="https://cdn.usefathom.com/script.js" data-site="{{site.fathom.id}}" defer></script>{% endif %}
<!-- Fathom Analytics [End] -->

<!-- Feeds -->
{% if site.feed %}{{ site.feed }}{% endif %}
<!-- Feeds [End] -->

<!-- OpenGraph -->
<meta property="og:title" content="{{ site.name}}{% if title %} - {{ title }}{% endif %}">
<meta property="og:site_name" content="{{ site.name}}">
<meta property="og:url" content="{{ site.baseURL}}">
<meta property="og:type" content="website">
<meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
<meta property="og:image" content="{% if image %}{{ image }}{% else %}{{ site.image}}{% endif %}">
<!-- OpenGraph [End] -->

<!-- Twitter Cards -->
<meta property="twitter:card" content="summary">
<meta property="twitter:site" content="{{ site.twitter }}">
<meta property="twitter:creator" content="">
<meta property="twitter:title" content="{{ site.name}}{% if title %} - {{ title }}{% endif %}">
<meta property="twitter:description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}">
<meta property="twitter:image" content="{% if image %}{{ image }}{% else %}{{ site.image}}{% endif %}">
<!-- Twitter Cards [End] -->

<!-- Appearance -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, viewport-fit=cover">

{% include "partials/_fonts.njk" %}

<link rel="stylesheet" type="text/css" href="/css/style.css">
{% if style %}<link rel="stylesheet" type="text/css" href="{{style}}">{% endif %}
	
<link rel="apple-touch-icon" href="{{ site.favicon }}">
<link rel="icon" type="image/png" sizes="271x271" href="{{ site.favicon }}">
<!-- Appearance [End] -->